@model ZenCart.Models.Address

@{
    Layout = null;
}


<h3>Are you sure you want to delete this address?</h3>
<div>
    <h4>Address Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Full Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt>
            Phone Number
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNo)
        </dd>
        <dt>
            Street Address
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StreetAddress)
        </dd>
        <dt>
            City
        </dt>
        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt>
            State
        </dt>
        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt>
            Postal Code
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt>
            Country
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>
    </dl>
    @using (Html.BeginForm("DeleteConfirmed", "Address", new { id = Model.AddressId }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "AddressList", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
